@model IEnumerable<Log>
@{ }

@if(Model.Count() == 0)
{
    <article>
        <div class="article-preview">No logs at this time.</div>
    </article>
}

@foreach (Log log in Model.OrderByDescending(l => l.CreatedDate).Take(10))
{
    <article>
        <h1><a href="/article/@log.EncodedTitle">@log.Title</a></h1>
        <h2>@log.CreatedDate.Encode()</h2>
        <div class="article-preview">
            @if (log.Body.Length >= 1000)
            {
                @MarkdownService.ParseHtml(log.Body.Substring(0, 1000));
            }
            else
            {
                @MarkdownService.ParseHtml(log.Body);
            }
        </div>
    </article>
}